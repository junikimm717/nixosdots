{
  "diagnostic-languageserver.filetypes": {
    "sh": ["shellcheck", "-x"]
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "json",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "svelte",
    "php"
  ],
  "html.filetypes": [
    "html",
    "handlebars",
    "htmldjango",
    "vue",
    "blade",
    "svelte"
  ],
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "coc.source.vimtex.filetypes": ["tex", "plaintex", "latex"]
}
