{
  "diagnostic-languageserver.filetypes": {
    "sh": ["shellcheck", "-x"]
  },
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": ["nix"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    },
    "zig": {
      "command": "zls",
      "filetypes": ["zig"]
    }
  },
  "coc.source.vimtex.filetypes": ["tex", "plaintex", "latex"]
}
